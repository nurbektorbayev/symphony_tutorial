{% extends 'base.html.twig' %}

{% block title %}Регистрация пользователя{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="display-4 mb-4">Регистрация пользователя</h1>
        <div class="row">
            <div class="col-sm-6">
                {{ form_start(form) }}
                <div class="summary alert d-none"></div>
                {{ form_row(form.email) }}
                {{ form_end(form) }}
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('register') }}
{% endblock %}